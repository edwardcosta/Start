<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:clipToPadding="false"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/card_project_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_project_height"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/card_project_img"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:layout_width="140dp"
                    android:layout_height="209dp" />

                <ImageView
                    android:id="@+id/card_project_favorit_heart"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/card_project_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15.6sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:text="@string/lorem_ipsum"/>

                    <TextView
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="2dp"
                        android:id="@+id/card_project_hashtag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textSize="12.5sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:text="#hashtag #app #starty"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="bottom">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/card_project_difficulty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15.6sp"
                                android:textColor="#6e6e6e"
                                android:text="FÃ¡cil"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ProgressBar
                                    android:layout_marginTop="16dp"
                                    android:id="@+id/card_project_hacker_progressbar"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:max="100"
                                    android:progress="0"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progressDrawable="@drawable/circular_progress_bar"
                                    android:background="@drawable/circle_shape"
                                    android:indeterminate="false"/>

                                <ImageView
                                    android:layout_marginTop="20dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/img_hacker"/>
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/card_project_hacker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textStyle="italic"
                                android:textColor="#6f6f6f"
                                android:text="2/2"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/card_project_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15.6sp"
                                android:textColor="#6e6e6e"
                                android:text="30/06"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ProgressBar
                                    android:layout_marginTop="16dp"
                                    android:id="@+id/card_project_hippie_progressbar"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:max="100"
                                    android:progress="0"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progressDrawable="@drawable/circular_progress_bar"
                                    android:background="@drawable/circle_shape"
                                    android:indeterminate="false"/>

                                <ImageView
                                    android:layout_marginTop="20dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/img_hipster"/>
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/card_project_hippie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textStyle="italic"
                                android:textColor="#6f6f6f"
                                android:text="2/2"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/card_project_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15.6sp"
                                android:textColor="#6e6e6e"
                                android:text="4 dias"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ProgressBar
                                    android:layout_marginTop="16dp"
                                    android:id="@+id/card_project_hustler_progressbar"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:max="100"
                                    android:progress="0"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:progressDrawable="@drawable/circular_progress_bar"
                                    android:background="@drawable/circle_shape"
                                    android:indeterminate="false"/>

                                <ImageView
                                    android:layout_marginTop="20dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginRight="4dp"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/img_hustler"/>
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/card_project_hustler"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textStyle="italic"
                                android:textColor="#6f6f6f"
                                android:text="2/2"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>