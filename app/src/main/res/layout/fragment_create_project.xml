<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/projectImages"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/project_image_1"
                        android:layout_width="wrap_content"
                        android:layout_height="76dp"
                        android:layout_marginLeft="16dp"
                        android:adjustViewBounds="true"
                        android:maxWidth="48dp"
                        android:minWidth="48dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/img_empty_image" />
                    <ImageView
                        android:id="@+id/project_image_clear_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/project_image_1"
                        android:layout_alignRight="@+id/project_image_1"
                        android:src="@drawable/img_clear_image" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/project_image_2"
                        android:maxWidth="48dp"
                        android:minWidth="48dp"
                        android:layout_height="76dp"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/img_empty_image" />
                    <ImageView
                        android:id="@+id/project_image_clear_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/project_image_2"
                        android:layout_alignRight="@+id/project_image_2"
                        android:src="@drawable/img_clear_image" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/project_image_3"
                        android:layout_width="wrap_content"
                        android:maxWidth="48dp"
                        android:minWidth="48dp"
                        android:layout_height="76dp"
                        android:layout_marginLeft="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/img_empty_image"/>
                    <ImageView
                        android:id="@+id/project_image_clear_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/project_image_3"
                        android:layout_alignRight="@+id/project_image_3"
                        android:src="@drawable/img_clear_image" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/project_image_4"
                        android:maxWidth="48dp"
                        android:minWidth="48dp"
                        android:layout_height="76dp"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/img_empty_image" />
                    <ImageView
                        android:id="@+id/project_image_clear_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/project_image_4"
                        android:layout_alignRight="@+id/project_image_4"
                        android:src="@drawable/img_clear_image" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/project_image_5"
                        android:maxWidth="48dp"
                        android:minWidth="48dp"
                        android:layout_height="76dp"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/img_empty_image" />
                    <ImageView
                        android:id="@+id/project_image_clear_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/project_image_5"
                        android:layout_alignRight="@+id/project_image_5"
                        android:src="@drawable/img_clear_image" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/project_image_6"
                        android:maxWidth="48dp"
                        android:minWidth="48dp"
                        android:layout_height="76dp"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/img_empty_image" />
                    <ImageView
                        android:id="@+id/project_image_clear_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/project_image_6"
                        android:layout_alignRight="@+id/project_image_6"
                        android:src="@drawable/img_clear_image" />
                </RelativeLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textinput_projectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorTextSecondary"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <EditText
                android:id="@+id/projectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Nome do projeto"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textinput_hashtags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorTextSecondary"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/fragment_create_project_hashtags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="#Hashtags" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Dificuldade"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/difficulty_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Data de Início"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dateInit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="02/06/17"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Duração"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/duration"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint="0"
                android:inputType="number"
                android:text="0"
                android:textSize="15sp"
                android:textAlignment="textEnd"
                android:gravity="end"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dias"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Nº participantes"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/nHackers"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="0"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/nHustlers"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="0"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/nHippies"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="0"
                android:textSize="15sp"/>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textinput_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorTextSecondary"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:hint="Descreva seu projeto"/>
        </android.support.design.widget.TextInputLayout>

        <Button
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FINALIZAR"
        android:textSize="14sp"
        android:layout_gravity="end"
        android:layout_marginRight="16dp"/>

    </LinearLayout>
</ScrollView>