<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/projectImages"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp">


            <ImageView
                android:id="@+id/imageView"
                android:maxWidth="90dp"
                android:minWidth="90dp"
                android:layout_height="130dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="16dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />
        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="19dp"
            android:text="Data de Início"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Dificuldade"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_create_project_hashtags"
            app:layout_constraintTop_toBottomOf="@+id/fragment_create_project_hashtags" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Duração"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-1dp"
            android:text="dias"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="@+id/dateInit"
            app:layout_constraintBottom_toBottomOf="@+id/duration"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="Nº participantes"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:text="Descrição"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/nHackers" />

        <TextView
            android:id="@+id/dateInit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="02/06/17"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            android:layout_marginTop="-3dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/difficulty_spinner" />

        <EditText
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:hint="Descreva seu projeto"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FINALIZAR"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Nome do projeto"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/projectImages" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="28dp"
            android:text="#Hashtags"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/projectName"
            app:layout_constraintTop_toBottomOf="@+id/projectName" />

        <EditText
            android:id="@+id/duration"
            android:layout_width="38dp"
            android:layout_height="39dp"
            android:textSize="15sp"
            android:inputType="number"
            android:hint="0"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            android:layout_marginTop="0dp"
            app:layout_constraintRight_toLeftOf="@+id/textView6"
            android:layout_marginRight="8dp" />

        <EditText
            android:id="@+id/projectName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nome"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/fragment_create_project_hashtags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="#partiu"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <Spinner
            android:id="@+id/difficulty_spinner"
            android:layout_width="78dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="@+id/textView8"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/fragment_create_project_hashtags"/>

        <EditText
            android:id="@+id/nHackers"
            android:layout_width="46dp"
            android:layout_height="35dp"
            android:inputType="number"
            android:hint="0"
            android:textSize="15sp"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginLeft="70dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/nHustlers"
            android:layout_width="50dp"
            android:layout_height="37dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="0dp"
            android:inputType="number"
            android:hint="0"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@+id/nHippies"
            app:layout_constraintTop_toTopOf="@+id/nHippies" />

        <EditText
            android:id="@+id/nHippies"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:inputType="number"
            android:hint="0"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="@+id/nHackers"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toRightOf="@+id/nHackers"
            android:layout_marginLeft="37dp" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>