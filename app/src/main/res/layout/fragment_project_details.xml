<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="14dp"
        android:id="@+id/proj_details_edit"
        android:layout_marginRight="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:text="Editar"/>

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/proj_details_image_view"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:autoPlay="false"
        app:fillColor="@color/white"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:strokeColor="@color/strokeColor"
        app:strokeWidth="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/proj_details_proj_title"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="15.6sp"
                android:maxLines="4"
                android:text="Project Title"/>

            <TextView
                android:id="@+id/proj_details_proj_hashtag"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="12.5sp"
                android:text="#hashtag #app #starty"/>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/proj_details_proj_difficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.6sp"
                        android:textColor="#6e6e6e"
                        android:text="Fácil"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/proj_details_proj_hacker_progressbar"
                            android:layout_marginTop="18dp"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:max="100"
                            android:progress="0"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/circular_progress_bar"
                            android:background="@drawable/circle_shape"
                            android:indeterminate="false"/>

                        <ImageView
                            android:layout_marginTop="22dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/img_hacker"/>


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/proj_details_proj_hacker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#6f6f6f"
                        android:text="2/2"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/proj_details_proj_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.6sp"
                        android:textColor="#6e6e6e"
                        android:text="30/06"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/proj_details_proj_hipster_progressbar"
                            android:layout_marginTop="18dp"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:max="100"
                            android:progress="0"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/circular_progress_bar"
                            android:background="@drawable/circle_shape"
                            android:indeterminate="false"/>


                        <ImageView
                            android:layout_marginTop="22dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/img_hipster"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/proj_details_proj_hipster"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#6f6f6f"
                        android:text="2/2"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/proj_details_proj_hustler_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.6sp"
                        android:textColor="#6e6e6e"
                        android:text="4 dias"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ProgressBar
                            android:id="@+id/proj_details_proj_hustler_progressbar"
                            android:layout_marginTop="18dp"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:max="100"
                            android:progress="0"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/circular_progress_bar"
                            android:background="@drawable/circle_shape"
                            android:indeterminate="false"/>


                        <ImageView
                            android:layout_marginTop="22dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/img_hustler"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/proj_details_proj_hustler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#6f6f6f"
                        android:text="2/2"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/proj_details_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/lorem_ipsum"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <Button
            android:id="@+id/proj_details_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:background="@null"
            android:textColor="@color/colorPrimary"
            android:text="Solicitar Participação"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>
</ScrollView>