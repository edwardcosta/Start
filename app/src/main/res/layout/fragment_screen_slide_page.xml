<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#361E54"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragment_profile_chooser_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/fragment_profile_chooser_img"
            android:layout_marginTop="8dp"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        
        <TextView
            android:layout_marginTop="64dp"
            android:id="@+id/fragment_profile_chooser_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/fragment_profile_chooser_description"
            style="?android:textAppearanceMedium"
            android:padding="16dp"
            android:lineSpacingMultiplier="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white_two"
            android:text="@string/lorem_ipsum" />

    </LinearLayout>
</LinearLayout>